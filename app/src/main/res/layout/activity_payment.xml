<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/frame">
<!--        Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="24dp"
            android:background="@color/primary"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/white"
                android:text="Pembayaran"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/white"
                android:text="Lakukan pembayaran anda segera untuk menyelesaikan pesanan."/>

        </LinearLayout>
<!--        Payment Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:background="@color/white"
            android:elevation="10dp"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="172dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Scan Kode QRIS Berikut untuk melakukan pembayaran" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="24dp"
                android:text="Total Harga: Rp.20000"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_marginVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:srcCompat="@drawable/icon_bg" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="24dp"
                android:text="Pembayaran berakhir dalam : 04.59 menit"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:textAlignment="center"
            android:layout_margin="24dp"
            android:text="Otomatis diperbarui jika pembayaran telah dilakukana ataupun tidak."/>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/component_status_success"
        android:id="@+id/paymentSuccessComponent"
        android:visibility="gone"/>
    <include layout="@layout/component_status_error"
        android:id="@+id/paymentErrorComponent"
        android:visibility="gone"/>
    <FrameLayout
        android:id="@+id/paymentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">
<!--        Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="24dp"
            android:background="@color/primary"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/white"
                android:text="@string/payment_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/white"
                android:text="@string/payment_description"/>

        </LinearLayout>
<!--        Payment Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:background="@color/white"
            android:elevation="10dp"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="172dp">
            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/payment_box_description" />

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                android:id="@+id/paymentTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="24dp"
                android:text="@string/payment_box_total"/>
            <ImageView
                android:id="@+id/paymentImage"
                android:layout_marginVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:visibility="gone"
                android:contentDescription="@string/payment_title"
                app:srcCompat="@drawable/icon_bg" />
            <ProgressBar
                android:id="@+id/progressPaymentImage"
                android:layout_marginVertical="64dp"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/paymentOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/payment_box_order_id"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buttonRefreshPayment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/inter_regular"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:text="@string/payment_box_button" />

            <TextView
                android:id="@+id/paymentStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/payment_status_pending"
                android:textAlignment="center"
                android:textColor="@color/warning" />

        </LinearLayout>
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:textAlignment="center"
            android:layout_margin="24dp"
            android:text="@string/payment_footer_description"/>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>